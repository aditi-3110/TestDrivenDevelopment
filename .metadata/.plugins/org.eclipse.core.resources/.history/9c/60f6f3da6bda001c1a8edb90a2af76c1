class ValidateISBNtest {

	@Test
	void checkValidISBN() {
		//fail("Not yet implemented");
		ValidateISBN validate = new ValidateISBN();
		boolean result = validate.checkISBN("0140449116");
		assertTrue(result);
	}
	
	@Test
	void checkInValidISBN() {
		//fail("Not yet implemented");
		ValidateISBN validate = new ValidateISBN();
		boolean result = validate.checkISBN("0140449117");
		assertFalse(result);
	}
